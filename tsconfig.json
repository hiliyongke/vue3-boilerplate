{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "types": ["node","vite-plugin-vue-layouts/client"],
    "paths": {
      "@/*": ["src/*"],
      "@api/*": ["src/api/*"]
    }
  },
  "include": [
    ".d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "**/*.ts",
    "**/*.md",
    "plop-tpls/component/prompt.js",
    "plopfile.js",
    "postcss.config.js",
  ],
  "exclude": ["node_modules", "dist"]
}
